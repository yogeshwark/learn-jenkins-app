pipeline {
    agent any
    environment {
        REACT_APP_VERSION = "1.0.$BUILD_ID"
    }
    stages {
        stage('Check AWS CLI Version') {
            agent {
                docker {
                    image 'amazon/aws-cli'
                    args '-u 0:0 --entrypoint=""' // Run as root and disable entrypoint
                }
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-auth', passwordVariable: 'AWS_SECRET_ACCESS_KEY', usernameVariable: 'AWS_ACCESS_KEY_ID')]) {
                    sh '''
                        echo "AWS CLI Version:"
                        aws --version

                        echo "S3 Buckets:"
                        aws s3 ls
                    '''
                }
            }
        }
    }
}
