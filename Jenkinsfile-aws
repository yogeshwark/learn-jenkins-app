pipeline {
    agent any
    environment {
        REACT_APP_VERSION = "1.0.$BUILD_ID"
        S3_BUCKET_NAME = "learn-jenkins-20252909" // Placeholder for S3 bucket name
    }
    stages {
        stage('Build Website') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh 'echo "Starting Website Build Stage..."'
                sh 'echo "Node Version:"'
                sh 'node --version'
                sh 'echo "NPM Version:"'
                sh 'npm --version'
                sh 'echo "Installing dependencies..."'
                sh 'npm ci'
                sh 'echo "Running build..."'
                sh 'npm run build'
                sh 'echo "Website Build Stage Completed."'
            }
        }
        stage('Check AWS CLI Version') {
            agent {
                docker {
                    image 'amazon/aws-cli'
                    args '-u 0:0 --entrypoint=""' // Run as root and disable entrypoint
                }
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-auth', passwordVariable: 'AWS_SECRET_ACCESS_KEY', usernameVariable: 'AWS_ACCESS_KEY_ID')]) {
                    sh '''
                        echo "AWS CLI Version:"
                        aws --version

                        echo "S3 Buckets:"
                        aws s3 ls
                    '''
                }
            }
        }
        stage('Deploy to S3') {
            agent {
                docker {
                    image 'amazon/aws-cli'
                    args '-u 0:0 --entrypoint=""'
                    reuseNode true
                }
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-auth', passwordVariable: 'AWS_SECRET_ACCESS_KEY', usernameVariable: 'AWS_ACCESS_KEY_ID')]) {
                    sh '''
                        echo "Deploying build directory to S3 bucket: $S3_BUCKET_NAME"
                        aws s3 sync build/ s3://$S3_BUCKET_NAME --delete
                        echo "Deployment to S3 Completed."
                    '''
                }
            }
        }
    }
}
